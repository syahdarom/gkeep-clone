{
  "name": "be-fastify",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch --tsconfig tsconfig.build.json src/server.ts",
    "build": "rimraf -- dist/ && tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "test": "vitest run --passWithNoTests",
    "test:w": "vitest --passWithNoTests",
    "lint": "eslint .",
    "check-types": "tsc --project tsconfig.build.json --noEmit"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "fastify": "^5.6.1",
    "fastify-plugin": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^22.15.3",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-turbo": "^2.6.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "pino-pretty": "^13.1.2",
    "rimraf": "^6.1.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.7"
  }
}
